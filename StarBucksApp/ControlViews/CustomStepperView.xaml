<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarBucksApp.ControlViews.CustomStepperView">

    <Border BackgroundColor="White">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="20"/>
        </Border.StrokeShape>
        
        <Grid ColumnDefinitions="*,*,*" BackgroundColor="White">
            <ImageButton Grid.Column="0" Source="substract.png" Aspect="Center"
                         Background="{StaticResource PrimaryBrush}" HeightRequest="35" WidthRequest="35"
                         CornerRadius="20" HorizontalOptions="Start" Clicked="SubStractTapped"/>
            
            <Label Grid.Column="1" x:Name="CountLabel" Text="0" VerticalOptions="Center"
                   HorizontalOptions="Center" TextColor="{StaticResource Primary}"
                   FontFamily="ProximaNovaRegular" FontSize="22"/>
            
            <ImageButton Grid.Column="2" Source="add.png" Aspect="Center" Background="{StaticResource PrimaryBrush}"
                         HeightRequest="35" WidthRequest="35" CornerRadius="20" HorizontalOptions="End"
                         Clicked="Add_Tapped"/>
        </Grid>
    </Border>
</ContentView>